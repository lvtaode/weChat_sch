/* pages/shop/shezhi/shop_product.wxss */
page{
  font-size:30rpx; 
}
.title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  font-weight: bold;
  color:#755353;
  background-color: #F5F5F5;
  padding-left: 50rpx;
  margin-bottom:10px;
  box-sizing: border-box;
}
.con{
  width: 90%;
  display: flex; 
  justify-content: space-between;
  margin: 0 auto;
  margin-bottom:30rpx; 
}
.con .pic{
  width: 50%;
  height: 220rpx;
  box-sizing: border-box;
  padding-top:9rpx; 
  text-align: center;
  border:1px solid #1da291;
}
.content{
  width: 45%;
   height: 220rpx;
  font-size:26rpx;
  color:#6b6a6a;
  box-sizing: border-box;
}
.content text{
  display: block;
  margin-top: 10rpx;
}
.btn button{
   border-color: #fff;
    background-color: #1da291;
    color: white;
    width: 38%;
    height: 50rpx;
    line-height: 50rpx;
    margin:80rpx 20rpx 0 0; 
    display: inline-block;
    border-radius: 10rpx;
    outline: none;
    border-image: none;
    border-style: none;
    font-size: 25rpx;
}
.foot{
  text-align: center;
  height: 400rpx;
  background-color: #f5f5f5;
  margin-top: 100rpx;
}
.foot button{
  display: inline-block;
   margin: 100rpx 0; 
}
.add_btn{
   border-color: #fff;
    background-color: #1da291;
    color: white;
    width: 300rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    outline: none;
    border-image: none;
    border-style: none;
    font-size: 30rpx;
}
