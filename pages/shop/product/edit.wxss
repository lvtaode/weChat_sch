/* pages/shop/product/edit.wxss */
page{
  font-size:35rpx;
}
form{
  display: block;
  width: 95%;
  margin: 0 auto;
}
view{
  margin-bottom: 20rpx;
}
.title{
  width: 100%;
  height: 40px;
  line-height: 40px;
   font-size:28rpx;
  color:red;
  background-color: #F5F5F5;
  padding-left: 40rpx;
  margin-bottom:20px;
  box-sizing: border-box;
}
input{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border: 1px solid #1da291;
  border-radius: 8rpx;
  padding: 0 10rpx;
  outline: none;
  border-image: none;
  margin-top: 5px;
}
.right_content{
  margin-right:40rpx;
  width: 320rpx; 
  text-align: center;
  float: right;
}
.photo_demo{
  width: 310rpx;
  height: 190rpx;
  text-align: center;
  padding-top:3rpx; 
  box-sizing: border-box;
  border: 1px solid #1da291;
}
button{
    border-color: #fff;
    background-color: #1da291;
    color: white;
    width: 180rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 15rpx;
    outline: none;
    border-image: none;
    border-style: none;
    font-size: 30rpx;
}
.explain{
  font-size: 25rpx;
  color:#938f8f;
  display: inline-block;
  line-height: 60rpx;
}
textarea{
  border: 1px solid #1da291;
  width: 100%;
  box-sizing: border-box;
  border-radius: 6px;
  line-height: 32px;
  margin-top: 3px;
  padding: 5rpx 10rpx;
}
.picker{
  margin-top: 20rpx;
  width: 310rpx;
   text-align: center; 
  box-sizing: border-box;
  height: 60rpx;
  line-height: 60rpx;
  border:1px solid #1da291;
}