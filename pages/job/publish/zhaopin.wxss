/* pages/job/publish/zhaopin.wxss */
page{
  font-size: 32rpx;
}
view{
  padding: 0 45rpx;
 line-height: 80rpx;
 border-bottom:1px solid #F5F5F5;
}
.title{
  background-color: #EFF0F5;
  line-height: 80rpx;
  padding:0 20rpx;
  color:#676767;
  font-weight: 600;
}
label{
  display: inline-block;
  width:185rpx;
  font-size: 35rpx;
  font-family: "黑体";
}
input{
  display: inline-block;
  background-color: #F5F5F5;
  border-radius:10rpx;
  vertical-align: middle;
  height: 65rpx;
  padding: 0 15rpx;
}

.box{
  display: inline-block;
  position: relative;
  width: 180rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  margin: auto;
}

.box>view.menu{
    position: absolute;
    background-color: #f5f5f5;
    width: 100%;
    left: 0;
    padding:0;
    z-index: 100;
}
view.menu view{
  border-top: 1px solid #ddd;
}
button{
  width: 60%;
  margin: 100rpx auto;
  color:#fff;
  background-color: #3283B0;
}