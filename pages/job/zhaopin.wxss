/* pages/job/zhaopin.wxss */
page{
  background-color: #ededee;
  font-size: 32rpx;
}

.top_select view.section{
  display: inline-block;
  width: 50%;
  height:100rpx;
  background-color: #fff;
}
.picker{
  line-height:100rpx;
  padding-left:50rpx; 
  border-right: 1px solid #ddd;
  box-shadow: -5rpx 0rpx 10rpx #ddd;
  font-weight: 600;
}
.job_list{
  margin-top: 20rpx;
}
.job_list .item{
  margin-bottom: 10rpx;
  background-color: #fff;
}
.job_list .item view{
  display: inline-block;
  box-sizing: border-box;
  padding-left: 50rpx;
  margin-bottom: 20rpx;
  line-height: 35rpx;
}
.job_list text{
  font-family:"宋体";
  font-weight: 600;
}