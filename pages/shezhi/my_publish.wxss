  margin-top: 20px;
  font-size: 28rpx;
  color:#4b4949;
  border-bottom: 1px solid #ddd;
}

.check{
  /* float: right; */
  padding: 5rpx 10rpx;
  border-radius:5px; 
  background-color: red;
  color: #fff;
}
