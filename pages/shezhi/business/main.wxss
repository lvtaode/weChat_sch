/* pages/shezhi/business/main.wxss */
.banner image{
   width: 100%;
   height: 180px;
   display: block;
}
.nav{
  display: flex;
  justify-content: space-around;
  margin-bottom: 35px;
}
.nav image{
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 6px;
}
.contact{
  width: 90%;
  height: 85px;
  margin: 0 auto;
  border-bottom: 1px solid #000;
}
.contact>view:first-child{ 
  padding-bottom:10px;
  font-size: 35rpx;
}
.tel image{
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}
.tel text{
  color:#1da291;
  font-size:35rpx; 
  font-weight: bold;
}
.foot{
  margin-top: 30px;
  padding-left:20px; 
  background-color:#D9D9D9;
  font-size:28rpx;
  height: 350rpx; 
  color: #777272;
}
.foot text{
  line-height: 50rpx;
}