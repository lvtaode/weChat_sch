<view class="content">
    <form bindsubmit="formSubmit">
        <view class="input-area">
          <input style="border-bottom:1px solid #ddd;" name="iphone" maxlength='11' type="text"  placeholder="手机号" bindchange="getPhoneNum" />
        <input  name="iphone2" maxlength='11' type="text"  placeholder="请再次输入" bindchange="getPhoneNum" />
        </view>
        <view class="btn-area">
            <button  disabled="{{registDisabled}}" style="background-color:{{registBtnBgBgColor}}"   formType="submit"  loading="{{btnLoading}}"> {{registBtnTxt}} </button>
         
        </view>
    </form>

    <!--<progress class="myprogress" percent="{{percent }}" color="{{color}}" active/>-->
    
</view>